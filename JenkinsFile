pipeline {
    agent any
    tools {
        maven 'Default'
    }
    stages {
        stage ('Initialize') {
            steps {
                echo 'starting the deploy'
            }
        }

        stage ('Build') {
            steps {
                echo 'compile the project'
                sh 'mvn clean compile'
            }
        }

        stage('Test') {
            steps {
                echo 'test the project'
                sh 'mvn test'
            }
        }

        stage('Deploy') {
            steps {
                echo 'deploy the project'
            }
        }
    }
}